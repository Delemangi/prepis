{
  "env": {
    "browser": true,
    "es2022": true,
    "node": true
  },
  "extends": [
    "canonical",
    "canonical/browser",
    "canonical/node"
  ],
  "rules": {
    "array-bracket-newline": [
      "error",
      "consistent"
    ],
    "array-element-newline": [
      "error",
      "consistent"
    ],
    "arrow-body-style": [
      "error",
      "as-needed"
    ],
    "canonical/destructuring-property-newline": [
      "off"
    ],
    "comma-dangle": [
      "error",
      "never"
    ],
    "func-style": [
      "error",
      "declaration"
    ],
    "import/extensions": [
      "off"
    ],
    "linebreak-style": [
      "error",
      "windows"
    ],
    "object-curly-newline": [
      "error",
      {
        "consistent": true
      }
    ],
    "object-curly-spacing": [
      "error",
      "never"
    ]
  }
}
